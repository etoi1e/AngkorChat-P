<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friendLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".friends.FriendsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFriendsTopBox"
        tools:visibility="visible">

        <SearchView
            android:id="@+id/svSearchFriendFriends"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round_corner_gray"
            android:iconifiedByDefault="false"
            android:queryHint="search"
            android:searchHintIcon="@drawable/ic_search_lightgray_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </SearchView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_search_lightgray_20"
            app:layout_constraintBottom_toBottomOf="@+id/svSearchFriendFriends"
            app:layout_constraintStart_toStartOf="@+id/svSearchFriendFriends"
            app:layout_constraintTop_toTopOf="@+id/svSearchFriendFriends" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/viewFriendsTopBox"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvtitleFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Friends"
        android:textColor="@color/textBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/viewFriendsTopBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBellFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_bell_line_default_28"
        app:layout_constraintBottom_toBottomOf="@+id/imgSearchFriends"
        app:layout_constraintEnd_toStartOf="@+id/imgSearchFriends"
        app:layout_constraintTop_toTopOf="@+id/imgSearchFriends" />

    <ImageView
        android:id="@+id/imgSearchFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_search_line_28"
        app:layout_constraintBottom_toBottomOf="@+id/imgAddFriendsFriends"
        app:layout_constraintEnd_toStartOf="@+id/imgAddFriendsFriends"
        app:layout_constraintTop_toTopOf="@+id/imgAddFriendsFriends" />

    <ImageView
        android:id="@+id/imgAddFriendsFriends"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_user_plus_line_28"
        app:layout_constraintBottom_toBottomOf="@+id/viewFriendsTopBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewFriendsTopBox" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout"
        app:layout_constraintVertical_bias="0.50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selfChatLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <Button
                    android:id="@+id/btnSelfChat"
                    android:layout_width="63dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/stroke_box_yellow"
                    android:text="Self-Chat"
                    android:textAllCaps="false"
                    android:textColor="@color/mainYellow"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgProfileFriendsList3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_profile_default_72"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius="10dp" />

                <TextView
                    android:id="@+id/tvEmailFriendsList3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Hello, AngkorChat!"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tvNameFriendsList3"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameFriendsList3" />

                <TextView
                    android:id="@+id/tvNameFriendsList3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="My Profile"
                    android:textColor="@color/textBlack"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/imgProfileFriendsList3"
                    app:layout_constraintTop_toTopOf="@+id/imgProfileFriendsList3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/viewGrayBoxFriends3"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:background="#f7f7fb" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="32dp">

                <TextView
                    android:id="@+id/tvBdayFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Friends with Birthdays"
                    android:textColor="@color/textBlack"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCountBdayFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1"
                    android:textColor="#929498"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBdayFriends"
                    app:layout_constraintStart_toEndOf="@+id/tvBdayFriends" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bDayLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/imageView48"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/img_confetti_40"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView115"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="View more birthdays"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView48"
                    app:layout_constraintStart_toEndOf="@+id/imageView48"
                    app:layout_constraintTop_toTopOf="@+id/imageView48" />

                <ImageView
                    android:id="@+id/imageView49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_indecator_right_gray_16"
                    app:layout_constraintBottom_toBottomOf="@+id/textView115"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView115" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/viewGrayBoxFriends2"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:background="#f7f7fb" />

            <ScrollView
                android:id="@+id/favScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">

                        <TextView
                            android:id="@+id/tvFavoriteFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Favorite"
                            android:textColor="@color/textBlack"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCountFavoriteFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="1"
                            android:textColor="#929498"
                            app:layout_constraintBottom_toBottomOf="@+id/tvFavoriteFriends"
                            app:layout_constraintStart_toEndOf="@+id/tvFavoriteFriends" />

                        <ImageView
                            android:id="@+id/imgFoldFavoriteFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_indecator_up_16"
                            android:tag="true"
                            app:layout_constraintBottom_toBottomOf="@+id/tvFavoriteFriends"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvFavoriteFriends" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFavoriteFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </ScrollView>

            <View
                android:id="@+id/viewGrayBoxFriends"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:background="#f7f7fb" />

            <ScrollView
                android:id="@+id/friendScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="32dp">

                        <TextView
                            android:id="@+id/tvFriendsFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Friends"
                            android:textColor="@color/textBlack"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCountFriendsFriends"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0"
                            android:textColor="#929498"
                            app:layout_constraintBottom_toBottomOf="@+id/tvFriendsFriends"
                            app:layout_constraintStart_toEndOf="@+id/tvFriendsFriends"
                            app:layout_constraintTop_toTopOf="@+id/tvFriendsFriends" />

                        <ImageView
                            android:id="@+id/imgFoldFriendsFriends"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/ic_indecator_up_16"
                            android:tag="true"
                            app:layout_constraintBottom_toBottomOf="@+id/tvFriendsFriends"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tvFriendsFriends" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFriendsFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>