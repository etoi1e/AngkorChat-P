<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pay.fragment.TopUpHistoryFragment">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAllTopUpHistory"
                android:layout_width="45dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/round8_gray_box"
                android:fontFamily="@font/poppins"
                android:text="All"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnDebitTopUpHistory"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/round8_gray_stroke_box"
                android:fontFamily="@font/poppins"
                android:text="Debit/Credit Card"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnTransferTopUpHistory"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/round8_gray_stroke_box"
                android:fontFamily="@font/poppins"
                android:text="Account Transfer"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnGiftCard"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/round8_gray_stroke_box"
                android:fontFamily="@font/poppins"
                android:text="Gift Card"
                android:textAllCaps="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_search_circle_32"
        app:layout_constraintBottom_toBottomOf="@+id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopUpHistory"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />
</androidx.constraintlayout.widget.ConstraintLayout>