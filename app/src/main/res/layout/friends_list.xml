<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgProfileFriendsList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp"
        android:src="@drawable/ic_profile_default_72" />

    <TextView
        android:id="@+id/tvNameFriendsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Cindy"
        android:textColor="@color/textBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgProfileFriendsList"
        app:layout_constraintTop_toTopOf="@+id/imgProfileFriendsList" />

    <TextView
        android:id="@+id/tvEmailFriendsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, AngkorChat!"
        android:textColor="#555555"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgProfileFriendsList"
        app:layout_constraintStart_toStartOf="@+id/tvNameFriendsList" />
</androidx.constraintlayout.widget.ConstraintLayout>