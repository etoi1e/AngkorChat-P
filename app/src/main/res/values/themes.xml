<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AngKorChatProto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Cursor 색상 변경   -->
        <item name="colorControlActivated">@color/mainYellow</item>
        <item name="colorControlNormal">#f7f7fb</item>
        <item name="android:textSelectHandle">@color/mainYellow</item>
        <item name="android:textCursorDrawable">@color/mainYellow</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>
</resources>